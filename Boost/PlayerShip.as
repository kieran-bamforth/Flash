package  {	import flash.display.Sprite;	import flash.events.Event;		public class PlayerShip extends Sprite{		private var _boostSprite:Sprite = new Sprite();		private var _boostShowing:Boolean = false;				private var _vx:Number = 0; // velocity		private var _vy:Number = 0;		private var _ax:Number = 0; // accleration		private var _ay:Number = 0;				public function set ShowBoost(pShowBoost):void		{			if(pShowBoost)			{				_boostShowing = true;				this.addChild(_boostSprite);			}			else			{				_boostShowing = false;				this.removeChild(_boostSprite);			}		}				public function get ShowBoost():Boolean		{			return _boostShowing;		}				public function PlayerShip() {			// draw!			with(this.graphics)			{				lineStyle(1, 0xFFFFFF);				moveTo(-15, -20);				lineTo(20 ,0);				lineTo(-15, 20);				lineTo(0, 0);				lineTo(-15, -20);			}			with(_boostSprite.graphics)			{				lineStyle(1, 0xFFFFFF);				moveTo(-5, -5);				lineTo(-25, 0);				lineTo(-5, 5);			}			// event listnener			this.addEventListener(Event.ENTER_FRAME, enterFrameHandler);		}		private function enterFrameHandler(e:Event):void		{			this.x += _vx;			this.y += _vy;		}				public function Boost(thrust:Number):void		{			var rotationToRadians:Number = this.rotation * Math.PI/180;			_ax = Math.cos(rotationToRadians)*thrust;			_ay = Math.sin(rotationToRadians)*thrust;			_vx += _ax;			_vy += _ay;			trace(_vx);		}	}	}