package  {	import flash.display.Sprite;		public class Ship extends Sprite{		private var _boostSprite:Sprite = new Sprite();		private var _boostShowing:Boolean = false;				public function set ShowBoost(pShowBoost):void		{			if(pShowBoost)			{				_boostShowing = true;				this.addChild(_boostSprite);			}			else			{				_boostShowing = false;				this.removeChild(_boostSprite);			}		}				public function get ShowBoost():Boolean		{			return _boostShowing;		}				public function Ship() {			// draw!			with(this.graphics)			{				lineStyle(1, 0xFFFFFF);				moveTo(-15, -20);				lineTo(20 ,0);				lineTo(-15, 20);				lineTo(0, 0);				lineTo(-15, -20);			}			with(_boostSprite.graphics)			{				lineStyle(1, 0xFFFFFF);				moveTo(-5, -5);				lineTo(-25, 0);				lineTo(-5, 5);			}		}	}	}